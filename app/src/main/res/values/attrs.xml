<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TemperatureView">
        <attr name="degreeBorderWidth" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="centerTextSize" format="dimension" />
        <attr name="degreeTextSize" format="dimension" />
        <attr name="degreeLength" format="dimension" />
        <attr name="degreeWidth" format="dimension" />
        <attr name="degreeColor" format="color" />
        <attr name="degreeSelectedColor" format="color" />
    </declare-styleable>


    <declare-styleable name="ShapeImageView">
        <attr name="shape" format="enum">
            <enum name="circle" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderRadius" format="dimension" />
        <attr name="pressedColor" format="color" />

    </declare-styleable>


    <declare-styleable name="QuickIndexView">
        <attr name="letterSize" format="dimension" />
        <attr name="letterColor" format="color" />
        <attr name="letterGap" format="dimension" />
        <attr name="mode" format="enum">
            <enum name="wrap" value="0" />
            <enum name="fill" value="1" />
        </attr>

    </declare-styleable>

    <!--自定义波纹view-->
    <declare-styleable name="WaveView">
        <attr name="position" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="waveMargin" format="dimension|reference" />
        <attr name="waveColor" format="color|reference" />
    </declare-styleable>


    <declare-styleable name="ArcHeaderView">
        <attr name="maxArcHeight" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="WebProgressBar">
        <attr name="progressColor" format="color|reference" />
    </declare-styleable>


</resources>